<div class="product-badges product-badges--top-right">
  {%- comment -%} Existing metafield / sale / sold-out badge {%- endcomment -%}
  {%- if product.metafields.custom.sale_percentage != blank -%}
    <div class="product-badges__badge">
      {{ product.metafields.custom.sale_percentage }}
    </div>
  {%- elsif product.available == false -%}
    <div class="product-badges__badge">
      {{ 'content.product_badge_sold_out' | t }}
    </div>
  {%- elsif product.compare_at_price > product.price -%}
    <div class="product-badges__badge">
      {{ 'content.product_badge_sale' | t }}
    </div>
  {%- endif -%}
</div>

{%- comment -%} New “Only X Left” badge in top-left {%- endcomment -%}
{%- assign variant = product.selected_or_first_available_variant -%}
{%- if variant.available and variant.inventory_quantity <= 5 and variant.inventory_quantity > 0 -%}
  <div class="product-badges product-badges--top-left">
    <div class="product-badges__badge color-warning">
      Only {{ variant.inventory_quantity }} Left
    </div>
  </div>
{%- endif -%}

{% stylesheet %}
.product-badges {
  position: absolute;
  z-index: 10;
}

.product-badges--top-right {
  top: 8px;
  right: 8px;
}

.product-badges--top-left {
  top: 8px;
  left: 8px;
}

.product-badges__badge {
  background: #000;
  color: #fff;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
  font-weight: 600;
  font-size: 0.85rem;
  display: flex;
  align-items: center;
  justify-content: center;
  text-transform: uppercase; /* all caps */
}

.product-badges__badge.color-warning {
  background: #ff4d4d; /* attention red */
}
{% endstylesheet %}
