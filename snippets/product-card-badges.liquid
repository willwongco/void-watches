<div class="product-badges product-badges--top-right">
  {%- assign sale_badge = product.metafields.custom.sale_percentage -%}
  {%- if sale_badge != blank -%}
    <div class="product-badges__badge">
      {{ sale_badge }}
    </div>
  {%- endif -%}
</div>

{% stylesheet %}
.product-badges {
  position: absolute;
  z-index: 10;
}

.product-badges--top-right {
  top: 8px;
  right: 8px;
}

.product-badges__badge {
  background: #000;
  color: #fff;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
  font-weight: 600;
  font-size: 0.85rem;
  display: flex;
  align-items: center;
  justify-content: center;
}
{% endstylesheet %}
