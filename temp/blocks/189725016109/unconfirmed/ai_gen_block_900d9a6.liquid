{% doc %}
  @prompt
    Create a comparison chart with 6 columns. At the top of each column should be an image. Below the image a text line and a call to action button. Below this there should be 4-6 lines of text with a description at the very left., On mobile it should be horizontal and scrollable left to right., Make the distance between feature label and feature value smaller. Also add a centered heading at the top of the section.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-comparison-chart-{{ ai_gen_id }} {
    width: 100%;
    padding: 40px 0;
  }

  .ai-comparison-chart__heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: {{ settings.type_heading_font.weight }};
  }

  .ai-comparison-chart__container-{{ ai_gen_id }} {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
  }

  .ai-comparison-chart__container-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-comparison-chart__container-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-comparison-chart__container-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.scrollbar_color }};
    border-radius: 4px;
  }

  .ai-comparison-chart__table-{{ ai_gen_id }} {
    display: table;
    width: 100%;
    min-width: 800px;
    border-collapse: separate;
    border-spacing: {{ block.settings.column_spacing }}px 0;
  }

  .ai-comparison-chart__header-row-{{ ai_gen_id }} {
    display: table-row;
  }

  .ai-comparison-chart__column-{{ ai_gen_id }} {
    display: table-cell;
    vertical-align: top;
    width: calc(100% / 6);
    background-color: {{ block.settings.column_bg_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.column_padding }}px;
    text-align: center;
  }

  .ai-comparison-chart__image-wrapper-{{ ai_gen_id }} {
    margin-bottom: 16px;
    height: {{ block.settings.image_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-chart__image-{{ ai_gen_id }} {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-comparison-chart__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-chart__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-comparison-chart__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin-bottom: 16px;
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
  }

  .ai-comparison-chart__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    margin-bottom: 24px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-comparison-chart__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-comparison-chart__features-{{ ai_gen_id }} {
    display: table-row-group;
  }

  .ai-comparison-chart__feature-row-{{ ai_gen_id }} {
    display: table-row;
  }

  .ai-comparison-chart__feature-cell-{{ ai_gen_id }} {
    display: table-cell;
    padding: {{ block.settings.feature_padding }}px;
    border-top: 1px solid {{ block.settings.feature_border_color }};
    vertical-align: middle;
    text-align: center;
    font-size: {{ block.settings.feature_text_size }}px;
    color: {{ block.settings.feature_text_color }};
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-comparison-chart__feature-label-{{ ai_gen_id }} {
    font-weight: 600;
    text-align: left;
    color: {{ block.settings.feature_label_color }};
    background-color: {{ block.settings.feature_label_bg_color }};
  }

  .ai-comparison-chart__feature-value-{{ ai_gen_id }} {
    background-color: {{ block.settings.column_bg_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-comparison-chart__table-{{ ai_gen_id }} {
      min-width: 1000px;
    }

    .ai-comparison-chart__column-{{ ai_gen_id }} {
      padding: {{ block.settings.column_padding | times: 0.8 }}px;
    }

    .ai-comparison-chart__image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }

    .ai-comparison-chart__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-comparison-chart__button-{{ ai_gen_id }} {
      padding: 10px 20px;
      font-size: 13px;
    }
  }
{% endstyle %}

<div class="ai-comparison-chart-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-comparison-chart__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="ai-comparison-chart__container-{{ ai_gen_id }}">
    <div class="ai-comparison-chart__table-{{ ai_gen_id }}">
      <div class="ai-comparison-chart__header-row-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign image_key = 'column_' | append: i | append: '_image'
            assign title_key = 'column_' | append: i | append: '_title'
            assign button_text_key = 'column_' | append: i | append: '_button_text'
            assign button_url_key = 'column_' | append: i | append: '_button_url'

            assign column_image = block.settings[image_key]
            assign column_title = block.settings[title_key]
            assign button_text = block.settings[button_text_key]
            assign button_url = block.settings[button_url_key]
          %}

          <div class="ai-comparison-chart__column-{{ ai_gen_id }}">
            <div class="ai-comparison-chart__image-wrapper-{{ ai_gen_id }}">
              {% if column_image %}
                <img
                  src="{{ column_image | image_url: width: 300 }}"
                  alt="{{ column_image.alt | escape }}"
                  class="ai-comparison-chart__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="300"
                  height="{{ block.settings.image_height }}"
                >
              {% else %}
                <div class="ai-comparison-chart__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if column_title != blank %}
              <h3 class="ai-comparison-chart__title-{{ ai_gen_id }}">{{ column_title }}</h3>
            {% endif %}

            {% if button_text != blank %}
              <a
                href="{{ button_url | default: '#' }}"
                class="ai-comparison-chart__button-{{ ai_gen_id }}"
              >
                {{ button_text }}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <div class="ai-comparison-chart__features-{{ ai_gen_id }}">
        {% for feature_num in (1..6) %}
          {% liquid
            assign feature_label_key = 'feature_' | append: feature_num | append: '_label'
            assign feature_label = block.settings[feature_label_key]
          %}

          {% if feature_label != blank %}
            <div class="ai-comparison-chart__feature-row-{{ ai_gen_id }}">
              <div class="ai-comparison-chart__feature-cell-{{ ai_gen_id }} ai-comparison-chart__feature-label-{{ ai_gen_id }}">
                {{ feature_label }}
              </div>

              {% for col_num in (1..6) %}
                {% liquid
                  assign feature_value_key = 'feature_' | append: feature_num | append: '_column_' | append: col_num
                  assign feature_value = block.settings[feature_value_key]
                %}

                <div class="ai-comparison-chart__feature-cell-{{ ai_gen_id }} ai-comparison-chart__feature-value-{{ ai_gen_id }}">
                  {{ feature_value | default: 'â€”' }}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

