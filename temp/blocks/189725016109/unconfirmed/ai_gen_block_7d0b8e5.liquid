{% endstyle %}

<comparison-chart-{{ ai_gen_id }} class="ai-comparison-chart-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <div class="ai-comparison-chart__heading-container-{{ ai_gen_id }}">
      <h2 class="ai-comparison-chart__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    </div>
  {% endif %}

  <div class="ai-comparison-chart__wrapper-{{ ai_gen_id }}">
    <button
      class="ai-comparison-chart__nav-button-{{ ai_gen_id }} ai-comparison-chart__nav-button--left-{{ ai_gen_id }}"
      aria-label="Scroll left"
      data-direction="left"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <button
      class="ai-comparison-chart__nav-button-{{ ai_gen_id }} ai-comparison-chart__nav-button--right-{{ ai_gen_id }}"
      aria-label="Scroll right"
      data-direction="right"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>

    <div class="ai-comparison-chart__container-{{ ai_gen_id }}">
      <div class="ai-comparison-chart__grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign image_key = 'column_' | append: i | append: '_image'
            assign title_key = 'column_' | append: i | append: '_title'
            assign button_text_key = 'column_' | append: i | append: '_button_text'
            assign button_url_key = 'column_' | append: i | append: '_button_url'
            assign features_key = 'column_' | append: i | append: '_features'

            assign image = block.settings[image_key]
            assign title = block.settings[title_key]
            assign button_text = block.settings[button_text_key]
            assign button_url = block.settings[button_url_key]
            assign features_text = block.settings[features_key]
          %}

          <div class="ai-comparison-chart__column-{{ ai_gen_id }}">
            <div class="ai-comparison-chart__image-wrapper-{{ ai_gen_id }}">
              {% if image %}
                <img
                  src="{{ image | image_url: width: 400 }}"
                  alt="{{ image.alt | escape }}"
                  class="ai-comparison-chart__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="{{ block.settings.image_height }}"
                >
              {% else %}
                <div class="ai-comparison-chart__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if title != blank %}
              <h3 class="ai-comparison-chart__title-{{ ai_gen_id }}">{{ title }}</h3>
            {% endif %}

            {% if button_text != blank %}
              <a
                href="{{ button_url | default: '#' }}"
                class="ai-comparison-chart__button-{{ ai_gen_id }}"
              >
                {{ button_text }}
              </a>
            {% endif %}

            <div class="ai-comparison-chart__features-{{ ai_gen_id }}">
              {% if features_text != blank %}
                {% assign feature_lines = features_text | newline_to_br | split: '<br />' %}
                {% for line in feature_lines %}
                  {% assign trimmed_line = line | strip %}
                  {% if trimmed_line != blank %}
                    {% if trimmed_line contains ':' %}
                      {% assign parts = trimmed_line | split: ':' %}
                      {% assign label = parts[0] | strip %}
                      {% assign value = parts[1] | strip %}
                      <div class="ai-comparison-chart__feature-row-{{ ai_gen_id }}">
                        <div class="ai-comparison-chart__feature-label-{{ ai_gen_id }}">{{ label }}</div>
                        <div class="ai-comparison-chart__feature-value-{{ ai_gen_id }}">{{ value }}</div>
                      </div>
                    {% else %}
                      <div class="ai-comparison-chart__feature-row-{{ ai_gen_id }}">
                        <div class="ai-comparison-chart__feature-label-{{ ai_gen_id }}">{{ trimmed_line }}</div>
                      </div>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</comparison-chart-{{ ai_gen_id }}>

<script>
  (function() {
    class ComparisonChart{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.container = this.querySelector('.ai-comparison-chart__container-{{ ai_gen_id }}');
        this.leftButton = this.querySelector('.ai-comparison-chart__nav-button--left-{{ ai_gen_id }}');
        this.rightButton = this.querySelector('.ai-comparison-chart__nav-button--right-{{ ai_gen_id }}');
        this.scrollAmount = 300;
      }

      connectedCallback() {
        this.setupEventListeners();
        this.updateButtonStates();
      }

      setupEventListeners() {
        this.leftButton.addEventListener('click', () => this.scroll('left'));
        this.rightButton.addEventListener('click', () => this.scroll('right'));
        this.container.addEventListener('scroll', () => this.updateButtonStates());
        window.addEventListener('resize', () => this.updateButtonStates());
      }

      scroll(direction) {
        const scrollLeft = this.container.scrollLeft;
        const targetScroll = direction === 'left' 
          ? scrollLeft - this.scrollAmount 
          : scrollLeft + this.scrollAmount;
        
        this.container.scrollTo({
          left: targetScroll,
          behavior: 'smooth'
        });
      }

      updateButtonStates() {
        const scrollLeft = this.container.scrollLeft;
        const maxScroll = this.container.scrollWidth - this.container.clientWidth;
        
        this.leftButton.disabled = scrollLeft <= 0;
        this.rightButton.disabled = scrollLeft >= maxScroll - 1;
      }
    }

    customElements.define('comparison-chart-{{ ai_gen_id }}', ComparisonChart{{ ai_gen_id }});
  })();
</script>

