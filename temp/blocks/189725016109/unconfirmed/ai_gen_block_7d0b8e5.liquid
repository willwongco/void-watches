    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    background-color: {{ block.settings.nav_button_bg_color }};
    border: 1px solid {{ block.settings.nav_button_border_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
    transition: all 0.3s ease;
