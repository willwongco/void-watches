    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: {{ block.settings.feature_row_spacing }}px;
    font-size: {{ block.settings.feature_font_size }}px;
    line-height: 1.4;
    gap: {{ block.settings.feature_gap }}px;
