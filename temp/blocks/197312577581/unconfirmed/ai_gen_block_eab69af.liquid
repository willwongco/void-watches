{% doc %}
  @prompt
    I want one line with three icons. Each Icon should have text to the right of it., All text and icons should be on one line.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-row-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.alignment }};
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding }}px 0;
    flex-wrap: nowrap;
  }

  .ai-icon-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .ai-icon-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-icon-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    color: {{ block.settings.icon_color }};
  }

  .ai-icon-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-row-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.7 }}px;
    }

    .ai-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-icon-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

