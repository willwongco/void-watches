{% doc %}
  @prompt
    Add a hero banner that has separate images for desktop and mobile., Make button visible.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.min_height_desktop }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-banner-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-hero-banner-image-mobile-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-hero-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
    z-index: 2;
  }

  .ai-hero-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-hero-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_max_width }}px;
    padding: 40px 20px;
  }

  .ai-hero-banner-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px 0;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-hero-banner-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px 0;
    opacity: 0.9;
    line-height: 1.4;
  }

  .ai-hero-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    border: 2px solid {{ block.settings.button_border_color }};
  }

  .ai-hero-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-{{ ai_gen_id }} {
      min-height: {{ block.settings.min_height_mobile }}px;
    }

    .ai-hero-banner-image-desktop-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hero-banner-image-mobile-{{ ai_gen_id }} {
      display: block;
    }

    .ai-hero-banner-content-{{ ai_gen_id }} {
      padding: 20px 16px;
    }

    .ai-hero-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-hero-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.desktop_image %}
    <img
      src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
      alt="{{ block.settings.desktop_image.alt | escape }}"
      class="ai-hero-banner-image-{{ ai_gen_id }} ai-hero-banner-image-desktop-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.desktop_image.width }}"
      height="{{ block.settings.desktop_image.height }}"
    >
  {% endif %}

  {% if block.settings.mobile_image %}
    <img
      src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
      alt="{{ block.settings.mobile_image.alt | escape }}"
      class="ai-hero-banner-image-{{ ai_gen_id }} ai-hero-banner-image-mobile-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.mobile_image.width }}"
      height="{{ block.settings.mobile_image.height }}"
    >
  {% endif %}

  {% unless block.settings.desktop_image and block.settings.mobile_image %}
    <div class="ai-hero-banner-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-hero-banner-empty-state-{{ ai_gen_id }}">
        Add desktop and mobile images to get started
      </div>
    </div>
  {% endunless %}

  {% if block.settings.show_overlay %}
    <div class="ai-hero-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-banner-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-banner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-hero-banner-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a href="{{ block.settings.button_link | default: '#' }}" class="ai-hero-banner-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero banner",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our amazing collection of products"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 400,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Content max width",
      "default": 600
    },
    {
      "type": "range",
      "id": "min_height_desktop",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Minimum height (desktop)",
      "default": 500
    },
    {
      "type": "range",
      "id": "min_height_mobile",
      "min": 200,
      "max": 600,
      "step": 25,
      "unit": "px",
      "label": "Minimum height (mobile)",
      "default": 400
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 24,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Heading size (desktop)",
      "default": 48
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size (mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Subheading size (desktop)",
      "default": 18
    },
    {
      "type": "range",
      "id": "subheading_size_mobile",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Subheading size (mobile)",
      "default": 16
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 30
    },
    {
      "type": "header",
      "content": "Button style"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Hover background",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Hover text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Border",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_border_color",
      "label": "Hover border",
      "default": "#f0f0f0"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ],
  "tag": null
}
{% endschema %}