{% doc %}
  @prompt
    Insert a row of 4 images with text underneath, Center the section, Center the image row with text on the page., Make image height adjustable on both desktop and mobile., Text alignment is not working.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-row-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .ai-image-row__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .ai-image-row__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    justify-items: center;
    width: 100%;
    max-width: 100%;
  }

  .ai-image-row__item-{{ ai_gen_id }} {
    width: 100%;
    max-width: 280px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ai-image-row__image-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.text_spacing }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    width: 100%;
  }

  .ai-image-row__image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height_desktop }}px;
    object-fit: cover;
    display: block;
  }

  .ai-image-row__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height_desktop }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-row__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-image-row__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-row__title-{{ ai_gen_id }} {
    margin: 0 0 8px 0;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    font-weight: 600;
    text-align: {{ block.settings.text_alignment }};
    width: 100%;
  }

  .ai-image-row__description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
    text-align: {{ block.settings.text_alignment }};
    width: 100%;
  }

  @media screen and (max-width: 990px) {
    .ai-image-row__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      justify-content: center;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-image-row__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      justify-content: center;
    }
    
    .ai-image-row__container-{{ ai_gen_id }} {
      padding: 0 15px;
    }

    .ai-image-row__image-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }

    .ai-image-row__placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-image-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-row__container-{{ ai_gen_id }}">
    <div class="ai-image-row__grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign title_key = 'title_' | append: i
          assign description_key = 'description_' | append: i
          
          assign image = block.settings[image_key]
          assign title = block.settings[title_key]
          assign description = block.settings[description_key]
        %}
        
        <div class="ai-image-row__item-{{ ai_gen_id }}">
          <div class="ai-image-row__image-wrapper-{{ ai_gen_id }}">
            {% if image %}
              <img
                src="{{ image | image_url: width: 400}}"
                alt="{{ image.alt | escape }}"
                class="ai-image-row__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >
            {% else %}
              <div class="ai-image-row__placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                <div class="ai-image-row__empty-state-{{ ai_gen_id }}">
                  Add image {{ i }}
                </div>
              </div>
            {% endif %}
          </div>
          
          {% if title != blank %}
            <h3 class="ai-image-row__title-{{ ai_gen_id }}">{{ title }}</h3>
          {% endif %}
          
          {% if description != blank %}
            <p class="ai-image-row__description-{{ ai_gen_id }}">{{ description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

