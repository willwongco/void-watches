{% doc %}
  @prompt
    Insert a thin bar with three icons with supporting text. All aligned horisontally., Make the segment full width., I want the grey background to reach all the way to the edge. Also, make the distance between all elements adjustable., Center the whole segment and extend it to the full width of the page.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 0;
    border-radius: {{ block.settings.border_radius }}px;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    {% if block.settings.show_border %}
      border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    {% endif %}
  }

  .ai-icon-bar__container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ block.settings.item_spacing }}px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-icon-bar__item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
    flex: 1;
    min-width: 0;
    justify-content: center;
    max-width: 300px;
  }

  .ai-icon-bar__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    flex-shrink: 0;
  }

  .ai-icon-bar__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    line-height: 1.3;
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-bar__container-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stack' %}
        flex-direction: column;
        gap: {{ block.settings.mobile_item_spacing }}px;
      {% else %}
        gap: {{ block.settings.mobile_item_spacing }}px;
      {% endif %}
      padding: 0 16px;
    }

    .ai-icon-bar__item-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stack' %}
        justify-content: center;
        text-align: center;
        max-width: none;
      {% endif %}
      gap: {{ block.settings.mobile_icon_text_gap }}px;
    }

    .ai-icon-bar__icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }

    .ai-icon-bar__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }
  }
{% endstyle %}

