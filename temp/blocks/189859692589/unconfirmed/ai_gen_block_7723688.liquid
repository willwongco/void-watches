{% doc %}
  @prompt
    An icon on the left with text on the right., Just one line of text that can be adjusted.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-simple-text-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    text-align: {{ block.settings.text_alignment }};
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-simple-text__content-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    line-height: {{ block.settings.line_height }};
    margin: 0;
    {% if block.settings.text_transform != 'none' %}
      text-transform: {{ block.settings.text_transform }};
    {% endif %}
    {% if block.settings.letter_spacing != 0 %}
      letter-spacing: {{ block.settings.letter_spacing }}px;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-simple-text-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding }}px;
      text-align: {{ block.settings.mobile_text_alignment }};
    }

    .ai-simple-text__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
  }
{% endstyle %}

<div class="ai-simple-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.text != blank %}
    <p class="ai-simple-text__content-{{ ai_gen_id }}">{{ block.settings.text }}</p>
  {% else %}
    <p class="ai-simple-text__content-{{ ai_gen_id }}">Add your text here</p>
  {% endif %}
</div>

