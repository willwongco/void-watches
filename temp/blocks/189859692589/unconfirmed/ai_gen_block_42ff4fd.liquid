{% doc %}
  @prompt
    An icon on the left with text on the right.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-text-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-icon-text__icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    color: {{ block.settings.icon_color }};
  }

  .ai-icon-text__icon-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
    stroke-width: {{ block.settings.icon_stroke_width }};
  }

  .ai-icon-text__content-{{ ai_gen_id }} {
    flex-grow: 1;
    color: {{ block.settings.text_color }};
  }

  .ai-icon-text__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px 0;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
  }

  .ai-icon-text__text-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  .ai-icon-text__text-{{ ai_gen_id }} p {
    margin: 0;
  }

  .ai-icon-text__text-{{ ai_gen_id }} p + p {
    margin-top: 0.5em;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-text-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'column' %}
        flex-direction: column;
        text-align: center;
      {% endif %}
      gap: {{ block.settings.mobile_spacing }}px;
      padding: {{ block.settings.mobile_padding }}px;
    }

    .ai-icon-text__icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }

    .ai-icon-text__icon-{{ ai_gen_id }} svg {
      width: calc({{ block.settings.mobile_icon_size }}px * 0.6);
      height: calc({{ block.settings.mobile_icon_size }}px * 0.6);
    }

    .ai-icon-text__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-icon-text__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }
  }
{% endstyle %}

<div class="ai-icon-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-icon-text__icon-{{ ai_gen_id }}">
    {% case block.settings.icon %}
      {% when 'check' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
        </svg>
      {% when 'star' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
        </svg>
      {% when 'heart' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
        </svg>
      {% when 'shield' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
      {% when 'truck' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      {% when 'gift' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
        </svg>
      {% when 'clock' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      {% when 'phone' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
      {% when 'mail' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      {% when 'location' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      {% when 'info' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      {% when 'lightning' %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      {% else %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
        </svg>
    {% endcase %}
  </div>

  <div class="ai-icon-text__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h3 class="ai-icon-text__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
    {% endif %}
    
    {% if block.settings.text != blank %}
      <div class="ai-icon-text__text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
    {% endif %}
  </div>
</div>

