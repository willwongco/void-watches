{% doc %}
  @prompt
    Create a hero banner that has separate images for desktop and mobile. I want to be able to add text on top of the image. The text should have three elements, pre-header, main header and sub header. The text should be individually adjustable for both desktop and mobile and it should be possible to do left-, center or right aligned. There should also be a button below the text. The button should be possible to align left right or centre. Include padding options in all directions for both mobile and desktop., Button is not visible., I want the padding to be more adjustable., I need more top padding on mobile layout.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-hero-banner__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-hero-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-hero-banner__image-desktop-{{ ai_gen_id }} {
    display: block;
  }

  .ai-hero-banner__image-mobile-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-banner__placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .ai-hero-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-banner__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: {{ block.settings.padding_top_desktop }}px;
    padding-bottom: {{ block.settings.padding_bottom_desktop }}px;
    padding-left: {{ block.settings.padding_left_desktop }}px;
    padding-right: {{ block.settings.padding_right_desktop }}px;
    text-align: {{ block.settings.text_alignment_desktop }};
    align-items: {% if block.settings.text_alignment_desktop == 'left' %}flex-start{% elsif block.settings.text_alignment_desktop == 'center' %}center{% else %}flex-end{% endif %};
  }

  .ai-hero-banner__text-wrapper-{{ ai_gen_id }} {
    max-width: 100%;
  }

  .ai-hero-banner__preheader-{{ ai_gen_id }} {
    color: {{ block.settings.preheader_color }};
    font-size: {{ block.settings.preheader_size_desktop }}px;
    margin: 0 0 {{ block.settings.preheader_spacing }}px 0;
  }

  .ai-hero-banner__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size_desktop }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-hero-banner__subheader-{{ ai_gen_id }} {
    color: {{ block.settings.subheader_color }};
    font-size: {{ block.settings.subheader_size_desktop }}px;
    margin: 0 0 {{ block.settings.subheader_spacing }}px 0;
  }

  .ai-hero-banner__button-wrapper-{{ ai_gen_id }} {
    display: flex;
    justify-content: {% if block.settings.button_alignment_desktop == 'left' %}flex-start{% elsif block.settings.button_alignment_desktop == 'center' %}center{% else %}flex-end{% endif %};
    width: 100%;
  }

  .ai-hero-banner__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-hero-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner__image-desktop-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hero-banner__image-mobile-{{ ai_gen_id }} {
      display: block;
    }

    .ai-hero-banner__content-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top_mobile }}px;
      padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
      padding-left: {{ block.settings.padding_left_mobile }}px;
      padding-right: {{ block.settings.padding_right_mobile }}px;
      text-align: {{ block.settings.text_alignment_mobile }};
      align-items: {% if block.settings.text_alignment_mobile == 'left' %}flex-start{% elsif block.settings.text_alignment_mobile == 'center' %}center{% else %}flex-end{% endif %};
    }

    .ai-hero-banner__preheader-{{ ai_gen_id }} {
      font-size: {{ block.settings.preheader_size_mobile }}px;
    }

    .ai-hero-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-hero-banner__subheader-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheader_size_mobile }}px;
    }

    .ai-hero-banner__button-wrapper-{{ ai_gen_id }} {
      justify-content: {% if block.settings.button_alignment_mobile == 'left' %}flex-start{% elsif block.settings.button_alignment_mobile == 'center' %}center{% else %}flex-end{% endif %};
    }
  }
{% endstyle %}

<div class="ai-hero-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-banner__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image_desktop or block.settings.image_mobile %}
      {% if block.settings.image_desktop %}
        <img
          src="{{ block.settings.image_desktop | image_url: width: 2000 }}"
          alt="{{ block.settings.image_desktop.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_desktop.width }}"
          height="{{ block.settings.image_desktop.height }}"
          class="ai-hero-banner__image-{{ ai_gen_id }} ai-hero-banner__image-desktop-{{ ai_gen_id }}"
        >
      {% endif %}
      {% if block.settings.image_mobile %}
        <img
          src="{{ block.settings.image_mobile | image_url: width: 1000 }}"
          alt="{{ block.settings.image_mobile.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_mobile.width }}"
          height="{{ block.settings.image_mobile.height }}"
          class="ai-hero-banner__image-{{ ai_gen_id }} ai-hero-banner__image-mobile-{{ ai_gen_id }}"
        >
      {% endif %}
    {% else %}
      <div class="ai-hero-banner__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}

    <div class="ai-hero-banner__content-{{ ai_gen_id }}">
      <div class="ai-hero-banner__text-wrapper-{{ ai_gen_id }}">
        {% if block.settings.preheader != blank %}
          <div class="ai-hero-banner__preheader-{{ ai_gen_id }}">
            {{ block.settings.preheader }}
          </div>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h2 class="ai-hero-banner__heading-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.subheader != blank %}
          <div class="ai-hero-banner__subheader-{{ ai_gen_id }}">
            {{ block.settings.subheader }}
          </div>
        {% endif %}

        {% if block.settings.button_text != blank %}
          <div class="ai-hero-banner__button-wrapper-{{ ai_gen_id }}">
            {% if block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="ai-hero-banner__button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            {% else %}
              <span class="ai-hero-banner__button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

