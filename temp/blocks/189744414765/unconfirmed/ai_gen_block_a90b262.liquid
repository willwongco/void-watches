{% doc %}
  @prompt
    Create a comparison chart with 6 columns. At the top of each column should be an image. Below the image a text line and a call to action button. Below this there should be 4-6 lines of text. On mobile it should be horizontal and scrollable left to right. On desktop it should be scrollable left to right. Also add a centered heading at the top of the section., Each row in the text segment under the CTA button should have two input fields. A label and a value. Images should be portrait format on both desktop and mobile. Add a function so that more feature values can be added later. Make CTA width adjustable. Make it possible to add more columns in the future. Make it possible to adjust number of columns down to 4., Use theme font Futura, Make font regular not bold., Make section padding adjustable on all sides. Add chevrons for desktop and mobile. Make it possible to select chevron styles., Make feature label and feature value font size adjustable separately for mobile and desktop.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-comparison-chart-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_right }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_left }}px;
  }

  .ai-comparison-chart__heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 40px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    font-family: 'Futura', {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: 400;
  }

  .ai-comparison-chart__container-{{ ai_gen_id }} {
    position: relative;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
  }

  .ai-comparison-chart__container-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-comparison-chart__container-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-comparison-chart__container-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.scrollbar_color }};
    border-radius: 4px;
  }

  .ai-comparison-chart__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_count }}, {{ block.settings.column_width }}px);
    gap: {{ block.settings.column_gap }}px;
    min-width: calc({{ block.settings.columns_count }} * {{ block.settings.column_width }}px + {{ block.settings.columns_count | minus: 1 }} * {{ block.settings.column_gap }}px);
    padding: 0 20px;
  }

  .ai-comparison-chart__column-{{ ai_gen_id }} {
    background-color: {{ block.settings.column_bg_color }};
    border: {{ block.settings.column_border_width }}px solid {{ block.settings.column_border_color }};
    border-radius: {{ block.settings.column_border_radius }}px;
    padding: {{ block.settings.column_padding }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .ai-comparison-chart__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 3/4;
    margin-bottom: 20px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-comparison-chart__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-comparison-chart__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-comparison-chart__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-comparison-chart__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 15px;
    font-family: 'Futura', {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: 400;
  }

  .ai-comparison-chart__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: 12px 20px;
    text-decoration: none;
    font-size: {{ block.settings.button_text_size }}px;
    font-family: 'Futura', {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: 400;
    margin-bottom: 20px;
    display: inline-block;
    transition: all 0.3s ease;
    cursor: pointer;
    width: {{ block.settings.button_width }}%;
    max-width: 100%;
  }

  .ai-comparison-chart__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-comparison-chart__features-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.feature_gap }}px;
  }

  .ai-comparison-chart__feature-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: {{ block.settings.feature_padding }}px;
    background-color: {{ block.settings.feature_bg_color }};
    border: {{ block.settings.feature_border_width }}px solid {{ block.settings.feature_border_color }};
    border-radius: {{ block.settings.feature_border_radius }}px;
    gap: 10px;
  }

  .ai-comparison-chart__feature-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_label_size_desktop }}px;
    color: {{ block.settings.feature_label_color }};
    font-family: 'Futura', {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: 400;
    flex: 1;
    text-align: left;
  }

  .ai-comparison-chart__feature-value-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_value_size_desktop }}px;
    color: {{ block.settings.feature_value_color }};
    font-family: 'Futura', {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: 400;
    flex: 1;
    text-align: right;
  }

  .ai-comparison-chart__chevron-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.chevron_bg_color }};
    border: {{ block.settings.chevron_border_width }}px solid {{ block.settings.chevron_border_color }};
    border-radius: 50%;
    width: {{ block.settings.chevron_size }}px;
    height: {{ block.settings.chevron_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-comparison-chart__chevron-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.chevron_hover_bg_color }};
    border-color: {{ block.settings.chevron_hover_border_color }};
    transform: translateY(-50%) scale(1.1);
  }

  .ai-comparison-chart__chevron--left-{{ ai_gen_id }} {
    left: 10px;
  }

  .ai-comparison-chart__chevron--right-{{ ai_gen_id }} {
    right: 10px;
  }

  .ai-comparison-chart__chevron-icon-{{ ai_gen_id }} {
    width: {{ block.settings.chevron_icon_size }}px;
    height: {{ block.settings.chevron_icon_size }}px;
    color: {{ block.settings.chevron_icon_color }};
    transition: color 0.3s ease;
  }

  .ai-comparison-chart__chevron-{{ ai_gen_id }}:hover .ai-comparison-chart__chevron-icon-{{ ai_gen_id }} {
    color: {{ block.settings.chevron_hover_icon_color }};
  }

  {% if block.settings.chevron_style == 'outline' %}
    .ai-comparison-chart__chevron-icon-{{ ai_gen_id }} {
      fill: none;
      stroke: currentColor;
      stroke-width: 2;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
  {% elsif block.settings.chevron_style == 'filled' %}
    .ai-comparison-chart__chevron-icon-{{ ai_gen_id }} {
      fill: currentColor;
      stroke: none;
    }
  {% else %}
    .ai-comparison-chart__chevron-icon-{{ ai_gen_id }} {
      fill: none;
      stroke: currentColor;
      stroke-width: 1;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-comparison-chart-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_right | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px {{ block.settings.padding_left | times: 0.7 }}px;
    }

    .ai-comparison-chart__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_count }}, {{ block.settings.column_width | times: 0.8 }}px);
      min-width: calc({{ block.settings.columns_count }} * {{ block.settings.column_width | times: 0.8 }}px + {{ block.settings.columns_count | minus: 1 }} * {{ block.settings.column_gap }}px);
    }

    .ai-comparison-chart__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-comparison-chart__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-comparison-chart__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
    }

    .ai-comparison-chart__feature-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.feature_label_size_mobile }}px;
    }

    .ai-comparison-chart__feature-value-{{ ai_gen_id }} {
      font-size: {{ block.settings.feature_value_size_mobile }}px;
    }

    .ai-comparison-chart__chevron-{{ ai_gen_id }} {
      width: {{ block.settings.chevron_size | times: 0.8 }}px;
      height: {{ block.settings.chevron_size | times: 0.8 }}px;
    }

    .ai-comparison-chart__chevron-icon-{{ ai_gen_id }} {
      width: {{ block.settings.chevron_icon_size | times: 0.8 }}px;
      height: {{ block.settings.chevron_icon_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<comparison-chart-{{ ai_gen_id }}
  class="ai-comparison-chart-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.heading != blank %}
    <h2 class="ai-comparison-chart__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="ai-comparison-chart__container-{{ ai_gen_id }}">
    {% if block.settings.show_chevrons %}
      <button
        class="ai-comparison-chart__chevron-{{ ai_gen_id }} ai-comparison-chart__chevron--left-{{ ai_gen_id }}"
        aria-label="Scroll left"
        data-direction="left"
      >
        {% if block.settings.chevron_style == 'filled' %}
          <svg class="ai-comparison-chart__chevron-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
            <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
          </svg>
        {% else %}
          <svg class="ai-comparison-chart__chevron-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
            <polyline points="15,18 9,12 15,6"></polyline>
          </svg>
        {% endif %}
      </button>

      <button
        class="ai-comparison-chart__chevron-{{ ai_gen_id }} ai-comparison-chart__chevron--right-{{ ai_gen_id }}"
        aria-label="Scroll right"
        data-direction="right"
      >
        {% if block.settings.chevron_style == 'filled' %}
          <svg class="ai-comparison-chart__chevron-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
            <path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12z"/>
          </svg>
        {% else %}
          <svg class="ai-comparison-chart__chevron-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
            <polyline points="9,18 15,12 9,6"></polyline>
          </svg>
        {% endif %}
      </button>
    {% endif %}

    <div class="ai-comparison-chart__grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign column_enabled_key = 'column_' | append: i | append: '_enabled'
          assign column_image_key = 'column_' | append: i | append: '_image'
          assign column_title_key = 'column_' | append: i | append: '_title'
          assign column_button_text_key = 'column_' | append: i | append: '_button_text'
          assign column_button_url_key = 'column_' | append: i | append: '_button_url'

          assign column_enabled = block.settings[column_enabled_key]
          assign column_image = block.settings[column_image_key]
          assign column_title = block.settings[column_title_key]
          assign column_button_text = block.settings[column_button_text_key]
          assign column_button_url = block.settings[column_button_url_key]
        %}

        {% if column_enabled and i <= block.settings.columns_count %}
          <div class="ai-comparison-chart__column-{{ ai_gen_id }}">
            <div class="ai-comparison-chart__image-wrapper-{{ ai_gen_id }}">
              {% if column_image %}
                <img
                  src="{{ column_image | image_url: width: 400 }}"
                  alt="{{ column_image.alt | escape }}"
                  class="ai-comparison-chart__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="533"
                >
              {% else %}
                <div class="ai-comparison-chart__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if column_title != blank %}
              <h3 class="ai-comparison-chart__title-{{ ai_gen_id }}">{{ column_title }}</h3>
            {% endif %}

            {% if column_button_text != blank %}
              <a
                href="{{ column_button_url | default: '#' }}"
                class="ai-comparison-chart__button-{{ ai_gen_id }}"
              >
                {{ column_button_text }}
              </a>
            {% endif %}

            <div class="ai-comparison-chart__features-{{ ai_gen_id }}">
              {% for j in (1..6) %}
                {% liquid
                  assign feature_label_key = 'column_' | append: i | append: '_feature_' | append: j | append: '_label'
                  assign feature_value_key = 'column_' | append: i | append: '_feature_' | append: j | append: '_value'

                  assign feature_label = block.settings[feature_label_key]
                  assign feature_value = block.settings[feature_value_key]
                %}

                {% if feature_label != blank or feature_value != blank %}
                  <div class="ai-comparison-chart__feature-{{ ai_gen_id }}">
                    <div class="ai-comparison-chart__feature-label-{{ ai_gen_id }}">
                      {{ feature_label | default: 'Feature' }}
                    </div>
                    <div class="ai-comparison-chart__feature-value-{{ ai_gen_id }}">
                      {{ feature_value | default: 'Value' }}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</comparison-chart-{{ ai_gen_id }}>

<script>
  (function() {
    class ComparisonChart{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupScrollBehavior();
        this.setupChevrons();
      }

      setupScrollBehavior() {
        const container = this.querySelector('.ai-comparison-chart__container-{{ ai_gen_id }}');
        if (!container) return;

        let isScrolling = false;
        let scrollTimeout;

        container.addEventListener('scroll', () => {
          if (!isScrolling) {
            isScrolling = true;
            container.style.scrollBehavior = 'auto';
          }

          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(() => {
            isScrolling = false;
            container.style.scrollBehavior = 'smooth';
          }, 150);

          this.updateChevronVisibility();
        });

        container.addEventListener('wheel', (e) => {
          if (Math.abs(e.deltaX) > Math.abs(e.deltaY)) {
            e.preventDefault();
            container.scrollLeft += e.deltaX;
          }
        }, { passive: false });

        this.updateChevronVisibility();
      }

      setupChevrons() {
        const chevrons = this.querySelectorAll('.ai-comparison-chart__chevron-{{ ai_gen_id }}');
        const container = this.querySelector('.ai-comparison-chart__container-{{ ai_gen_id }}');
        
        if (!container) return;

        chevrons.forEach(chevron => {
          chevron.addEventListener('click', (e) => {
            e.preventDefault();
            const direction = chevron.dataset.direction;
            const scrollAmount = {{ block.settings.column_width | plus: block.settings.column_gap }};
            
            if (direction === 'left') {
              container.scrollLeft -= scrollAmount;
            } else {
              container.scrollLeft += scrollAmount;
            }
          });
        });
      }

      updateChevronVisibility() {
        const container = this.querySelector('.ai-comparison-chart__container-{{ ai_gen_id }}');
        const leftChevron = this.querySelector('.ai-comparison-chart__chevron--left-{{ ai_gen_id }}');
        const rightChevron = this.querySelector('.ai-comparison-chart__chevron--right-{{ ai_gen_id }}');
        
        if (!container || !leftChevron || !rightChevron) return;

        const isAtStart = container.scrollLeft <= 0;
        const isAtEnd = container.scrollLeft >= container.scrollWidth - container.clientWidth - 1;

        leftChevron.style.opacity = isAtStart ? '0.3' : '1';
        leftChevron.style.pointerEvents = isAtStart ? 'none' : 'auto';
        
        rightChevron.style.opacity = isAtEnd ? '0.3' : '1';
        rightChevron.style.pointerEvents = isAtEnd ? 'none' : 'auto';
      }
    }

    customElements.define('comparison-chart-{{ ai_gen_id }}', ComparisonChart{{ ai_gen_id }});
  })();
</script>

