{% doc %}
  @prompt
    Generate a section with two images and a text block with header and text in an editorial style.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.grid_gap }}px;
    align-items: center;
  }

  .ai-editorial-grid-{{ ai_gen_id }}--layout-text-left {
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-areas: "text image1 image2";
  }

  .ai-editorial-grid-{{ ai_gen_id }}--layout-text-center {
    grid-template-columns: 1fr 2fr 1fr;
    grid-template-areas: "image1 text image2";
  }

  .ai-editorial-grid-{{ ai_gen_id }}--layout-text-right {
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-areas: "image1 image2 text";
  }

  .ai-editorial-text-block-{{ ai_gen_id }} {
    grid-area: text;
    padding: {{ block.settings.text_padding }}px;
  }

  .ai-editorial-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_margin }}px 0;
    line-height: 1.2;
    font-weight: 700;
  }

  .ai-editorial-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-editorial-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
  }

  .ai-editorial-image-wrapper-{{ ai_gen_id }}--first {
    grid-area: image1;
  }

  .ai-editorial-image-wrapper-{{ ai_gen_id }}--second {
    grid-area: image2;
  }

  .ai-editorial-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-editorial-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-editorial-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 990px) {
    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
      grid-template-areas: 
        "text text"
        "image1 image2";
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-editorial-text-block-{{ ai_gen_id }} {
      text-align: center;
      padding: {{ block.settings.mobile_text_padding }}px;
    }

    .ai-editorial-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-editorial-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      grid-template-areas: 
        "text"
        "image1"
        "image2";
    }
  }
{% endstyle %}

<div class="ai-editorial-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-container-{{ ai_gen_id }}">
    <div class="ai-editorial-grid-{{ ai_gen_id }} ai-editorial-grid-{{ ai_gen_id }}--layout-{{ block.settings.layout }}">
      
      <div class="ai-editorial-text-block-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-editorial-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        
        {% if block.settings.text != blank %}
          <div class="ai-editorial-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
        {% endif %}
      </div>

      <div class="ai-editorial-image-wrapper-{{ ai_gen_id }} ai-editorial-image-wrapper-{{ ai_gen_id }}--first">
        {% if block.settings.image_1 %}
          <img
            src="{{ block.settings.image_1 | image_url: width: 800 }}"
            alt="{{ block.settings.image_1.alt | escape }}"
            class="ai-editorial-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.image_1.width }}"
            height="{{ block.settings.image_1.height }}"
          >
        {% else %}
          <div class="ai-editorial-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-editorial-empty-state-{{ ai_gen_id }}">
              Add first image
            </div>
          </div>
        {% endif %}
      </div>

      <div class="ai-editorial-image-wrapper-{{ ai_gen_id }} ai-editorial-image-wrapper-{{ ai_gen_id }}--second">
        {% if block.settings.image_2 %}
          <img
            src="{{ block.settings.image_2 | image_url: width: 800 }}"
            alt="{{ block.settings.image_2.alt | escape }}"
            class="ai-editorial-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.image_2.width }}"
            height="{{ block.settings.image_2.height }}"
          >
        {% else %}
          <div class="ai-editorial-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-editorial-empty-state-{{ ai_gen_id }}">
              Add second image
            </div>
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Editorial section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Text position",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ],
      "default": "text-center"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 10,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Grid gap",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_gap",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Mobile gap",
      "default": 30
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Editorial story"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Share your brand story, highlight a collection, or create an engaging narrative that connects with your audience. This editorial section provides the perfect space for storytelling."
    },
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second image"
    },
    {
      "type": "select",
      "id": "image_aspect_ratio",
      "label": "Image aspect ratio",
      "options": [
        {
          "value": "1/1",
          "label": "Square (1:1)"
        },
        {
          "value": "4/3",
          "label": "Landscape (4:3)"
        },
        {
          "value": "3/4",
          "label": "Portrait (3:4)"
        },
        {
          "value": "16/9",
          "label": "Wide (16:9)"
        }
      ],
      "default": "4/3"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 36
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "range",
      "id": "heading_margin",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Heading bottom margin",
      "default": 20
    },
    {
      "type": "range",
      "id": "text_padding",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Text block padding",
      "default": 20
    },
    {
      "type": "header",
      "content": "Mobile settings"
    },
    {
      "type": "range",
      "id": "mobile_heading_size",
      "min": 18,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Mobile heading size",
      "default": 28
    },
    {
      "type": "range",
      "id": "mobile_text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Mobile text size",
      "default": 14
    },
    {
      "type": "range",
      "id": "mobile_text_padding",
      "min": 0,
      "max": 40,
      "step": 5,
      "unit": "px",
      "label": "Mobile text padding",
      "default": 15
    }
  ],
  "presets": [
    {
      "name": "Editorial section"
    }
  ]
}
{% endschema %}