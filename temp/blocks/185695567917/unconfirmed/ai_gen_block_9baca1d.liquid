{% doc %}
  @prompt
    Insert an icon with text on the right hand side.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-text-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-icon-text__icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
  }

  .ai-icon-text__icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .ai-icon-text__content-{{ ai_gen_id }} {
    flex-grow: 1;
    color: {{ block.settings.text_color }};
  }

  .ai-icon-text__title-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
  }

  .ai-icon-text__description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-text-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.8 }}px;
      padding: {{ block.settings.padding | times: 0.8 }}px;
    }

    .ai-icon-text__icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-icon-text__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-icon-text__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-icon-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-icon-text__icon-{{ ai_gen_id }}">
    {% case block.settings.icon_type %}
      {% when 'check' %}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20,6 9,17 4,12"></polyline>
        </svg>
      {% when 'star' %}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
        </svg>
      {% when 'heart' %}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
      {% when 'info' %}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="16" x2="12" y2="12"></line>
          <line x1="12" y1="8" x2="12.01" y2="8"></line>
        </svg>
      {% when 'gift' %}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20,12 20,22 4,22 4,12"></polyline>
          <rect x="2" y="7" width="20" height="5"></rect>
          <line x1="12" y1="22" x2="12" y2="7"></line>
          <path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"></path>
          <path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"></path>
        </svg>
      {% when 'shield' %}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
        </svg>
      {% when 'truck' %}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="1" y="3" width="15" height="13"></rect>
          <polygon points="16,8 20,8 23,11 23,16 16,16 16,8"></polygon>
          <circle cx="5.5" cy="18.5" r="2.5"></circle>
          <circle cx="18.5" cy="18.5" r="2.5"></circle>
        </svg>
      {% when 'clock' %}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12,6 12,12 16,14"></polyline>
        </svg>
    {% endcase %}
  </div>
  
  <div class="ai-icon-text__content-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h3 class="ai-icon-text__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
    {% endif %}
    
    {% if block.settings.description != blank %}
      <div class="ai-icon-text__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}
  </div>
</div>

