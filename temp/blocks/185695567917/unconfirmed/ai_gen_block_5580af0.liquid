{% doc %}
  @prompt
    Insert an icon with text on the right hand side., I want to upload the icon, make icon a link that can open in a new window, make distance between title and description adjustable, Centre icon and text horizontally

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-text-block-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: {{ block.settings.icon_text_gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    width: 100%;
  }

  .ai-icon-text-block__wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: {{ block.settings.icon_text_gap }}px;
    max-width: 100%;
  }

  .ai-icon-text-block__icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: block;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  .ai-icon-text-block__icon-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: {{ block.settings.icon_border_radius }}px;
  }

  .ai-icon-text-block__icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.icon_border_radius }}px;display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-icon-text-block__icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: #999;
  }

  .ai-icon-text-block__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: -25px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    white-space: nowrap;
    pointer-events: none;
  }

  .ai-icon-text-block__content-{{ ai_gen_id }} {
    flex-grow: 1;
    min-width: 0;
  }

  .ai-icon-text-block__title-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.title_description_gap }}px 0;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    line-height: 1.3;
  }

  .ai-icon-text-block__description-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-text-block-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.8 }}px;
    }

    .ai-icon-text-block__wrapper-{{ ai_gen_id }} {
      gap: {{ block.settings.icon_text_gap | times: 0.8 }}px;
    }

    .ai-icon-text-block__icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-icon-text-block__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
      margin-bottom: {{ block.settings.title_description_gap | times: 0.8 }}px;
    }

    .ai-icon-text-block__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;}
  }
{% endstyle %}

<div class="ai-icon-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-icon-text-block__wrapper-{{ ai_gen_id }}">
    {% if block.settings.icon_link != blank %}
      <a 
        href="{{ block.settings.icon_link }}" 
        class="ai-icon-text-block__icon-wrapper-{{ ai_gen_id }}"
        {% if block.settings.open_in_new_window %}target="_blank" rel="noopener noreferrer"{% endif %}
        aria-label="{% if block.settings.title != blank %}{{ block.settings.title | strip_html }}{% else %}Icon link{% endif %}"
      >
    {% else %}
      <div class="ai-icon-text-block__icon-wrapper-{{ ai_gen_id }}">
    {% endif %}
      {% if block.settings.icon %}
        <img
          src="{{ block.settings.icon | image_url: width: 200}}"
          alt="{% if block.settings.icon.alt != blank %}{{ block.settings.icon.alt | escape }}{% elsif block.settings.title != blank %}{{ block.settings.title | strip_html | escape }}{% endif %}"
          class="ai-icon-text-block__icon-{{ ai_gen_id }}"loading="lazy"
          width="{{ block.settings.icon_size }}"
          height="{{ block.settings.icon_size }}"
        >
      {% else %}
        <div class="ai-icon-text-block__icon-placeholder-{{ ai_gen_id }}">
          {{'image' | placeholder_svg_tag }}<div class="ai-icon-text-block__empty-state-{{ ai_gen_id }}">
            Add an icon
          </div>
        </div>
      {% endif %}
    {% if block.settings.icon_link != blank %}
      </a>
    {% else %}
      </div>
    {% endif %}<div class="ai-icon-text-block__content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h3 class="ai-icon-text-block__title-{{ ai_gen_id }}">
          {{ block.settings.title }}
        </h3>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-icon-text-block__description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Icon with text",
  "settings": [
    {
      "type": "header",
      "content": "Icon"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon image"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 24,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Icon size",
      "default": 48
    },
    {
      "type": "range",
      "id": "icon_border_radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Icon border radius",
      "default": 8
    },
    {
      "type": "url",
      "id": "icon_link",
      "label": "Icon link"
    },
    {
      "type": "checkbox",
      "id": "open_in_new_window",
      "label": "Open link in new window",
      "default": false
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>Feature title</p>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Add a compelling description for this feature. Explain the benefits and how it helps your customers.</p>"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "icon_text_gap",
      "min": 8,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Gap between icon and text",
      "default": 20
    },
    {
      "type": "range",
      "id": "title_description_gap",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Gap between title and description",
      "default": 8
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Block padding",
      "default": 20
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Block border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Title style"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 12,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 20
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Title weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semibold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "header",
      "content": "Description style"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Icon with text"
    }
  ]
}
{% endschema %}