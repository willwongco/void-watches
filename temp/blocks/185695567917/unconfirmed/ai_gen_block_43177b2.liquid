{% doc %}
  @prompt
    Insert an icon with text on the right hand side., I want to upload the icon

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-text-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-icon-text__icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  .ai-icon-text__icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .ai-icon-text__icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }

  .ai-icon-text__icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-icon-text__content-{{ ai_gen_id }} {
    flex-grow: 1;
    color: {{ block.settings.text_color }};
  }

  .ai-icon-text__title-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
  }

  .ai-icon-text__description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-text-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.8 }}px;
      padding: {{ block.settings.padding | times: 0.8 }}px;
    }

    .ai-icon-text__icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-icon-text__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-icon-text__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-icon-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-icon-text__icon-{{ ai_gen_id }}">
    {% if block.settings.icon %}
      <img
        src="{{ block.settings.icon | image_url: width: 200 }}"
        alt="{{ block.settings.icon.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.icon_size }}"
        height="{{ block.settings.icon_size }}"
      >
    {% else %}
      <div class="ai-icon-text__icon-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>
  
  <div class="ai-icon-text__content-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h3 class="ai-icon-text__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
    {% endif %}
    
    {% if block.settings.description != blank %}
      <div class="ai-icon-text__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Icon with text",
  "settings": [
    {
      "type": "header",
      "content": "Icon"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon image"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 16,
      "max": 80,
