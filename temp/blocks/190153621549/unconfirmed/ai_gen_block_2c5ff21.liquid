{% doc %}
  @prompt
    insert three icons with text. horizontal alignment
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-text-container-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: {{ block.settings.horizontal_alignment }};
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    flex-wrap: wrap;
  }

  .ai-icon-text-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.layout_direction }};
    align-items: center;
    gap: {{ block.settings.icon_text_spacing }}px;
    text-align: center;
    flex: 1;
    min-width: 200px;
  }

  .ai-icon-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    flex-shrink: 0;
  }

  .ai-icon-wrapper-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
    color: {{ block.settings.icon_color }};
  }

  .ai-text-content-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-text-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 4px 0;
    line-height: 1.2;
  }

  .ai-text-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-text-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_spacing }}px;
    }

    .ai-icon-text-item-{{ ai_gen_id }} {
      min-width: auto;
      width: 100%;
    }
  }
{% endstyle %}

