{% doc %}
  @prompt
    Create a section with a 3-image grid layout. Left column has one large image (700x1000px). Right column has two stacked images (700px wide, equal height). The bottom right image should include an overlay button that can be customized with text and link destination. Make it responsive and include hover effects., The top and bottom of the grid should be aligned. Equal spacing between all images., Display Button all the time, Move button to lower side of image, Make the grid same width as vidoe below

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows:1fr 1fr;
    gap: {{ block.settings.grid_gap }}px;
    width: 100%;
    max-width: none;
    margin: 0;
    padding: {{ block.settings.section_padding }}px;
    height: {{ block.settings.grid_height }}px;}

  .ai-image-grid__left-{{ ai_gen_id }} {
    grid-row: 1 /3;
    position: relative;
    overflow: hidden;border-radius: {{ block.settings.border_radius }}px;}

  .ai-image-grid__right-top-{{ ai_gen_id }} {
    grid-row: 1;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-grid__right-bottom-{{ ai_gen_id }} {
    grid-row: 2;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-grid__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;transition: transform 0.3s ease;
  }

  .ai-image-grid__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-image-grid__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-image-grid__item-{{ ai_gen_id }}:hover .ai-image-grid__image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.hover_scale }});
  }

  .ai-image-grid__overlay-{{ ai_gen_id }} {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      0deg,
      {{ block.settings.overlay_color | color_modify: 'alpha', block.settings.overlay_opacity }},
      {{ block.settings.overlay_color | color_modify: 'alpha',0 }}
    );
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: {{ block.settings.overlay_padding }}px;
    opacity: 1;
    transition: opacity 0.3s ease;
    height: {{ block.settings.overlay_height }}px;
  }

  .ai-image-grid__right-bottom-{{ ai_gen_id }}:hover .ai-image-grid__overlay-{{ ai_gen_id }} {
    opacity: 0.95;
  }

  .ai-image-grid__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    text-decoration: none;
    text-transform: {{ block.settings.button_text_transform }};
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-image-grid__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-image-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto;
      gap: {{ block.settings.mobile_grid_gap }}px;
      padding: {{ block.settings.mobile_section_padding }}px;
      height: auto;
    }

    .ai-image-grid__left-{{ ai_gen_id }} {
      grid-row: {{ block.settings.mobile_order_left }};
      aspect-ratio: 4/3;
    }

    .ai-image-grid__right-top-{{ ai_gen_id }} {
      grid-row: {{ block.settings.mobile_order_right_top }};
      aspect-ratio: 4/3;
    }

    .ai-image-grid__right-bottom-{{ ai_gen_id }} {
      grid-row: {{ block.settings.mobile_order_right_bottom }};
      aspect-ratio: 4/3;
    }

    .ai-image-grid__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_mobile_font_size }}px;
      padding: {{ block.settings.button_mobile_padding_vertical }}px {{ block.settings.button_mobile_padding_horizontal }}px;
    }

    .ai-image-grid__overlay-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_overlay_padding }}px;
      height: {{ block.settings.mobile_overlay_height }}px;
    }
  }
{% endstyle %}<div class="ai-image-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-grid__left-{{ ai_gen_id }} ai-image-grid__item-{{ ai_gen_id }}">
    {% if block.settings.left_image %}
      <img
        src="{{ block.settings.left_image | image_url: width:700 }}"
        alt="{{ block.settings.left_image.alt | escape }}"
        class="ai-image-grid__image-{{ ai_gen_id }}"
        loading="lazy"
        width="700"
        height="1000"
      >
    {% else %}
      <div class="ai-image-grid__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-image-grid__right-top-{{ ai_gen_id }} ai-image-grid__item-{{ ai_gen_id }}">
    {% if block.settings.top_right_image %}
      <img
        src="{{ block.settings.top_right_image | image_url: width: 700 }}"
        alt="{{ block.settings.top_right_image.alt | escape }}"
        class="ai-image-grid__image-{{ ai_gen_id }}"
        loading="lazy"
        width="700"
        height="500"
      >
    {% else %}
      <div class="ai-image-grid__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-image-grid__right-bottom-{{ ai_gen_id }} ai-image-grid__item-{{ ai_gen_id }}">
    {% if block.settings.bottom_right_image %}
      <img
        src="{{ block.settings.bottom_right_image | image_url: width: 700 }}"
        alt="{{ block.settings.bottom_right_image.alt | escape }}"
        class="ai-image-grid__image-{{ ai_gen_id }}"
        loading="lazy"
        width="700"
        height="500"
      >
    {% else %}
      <div class="ai-image-grid__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}

    {% if block.settings.show_overlay_button %}
      <div class="ai-image-grid__overlay-{{ ai_gen_id }}">
        {% if block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-image-grid__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% else %}
          <span class="ai-image-grid__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </span>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

