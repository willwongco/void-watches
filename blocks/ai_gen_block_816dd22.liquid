    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "empty_state_color",
      "label": "Empty state text color",
      "default": "#666666"
    }
  ],
  "presets": [
    {
      "name": "Collection SKU grid"
    }
  ]
}
{% endschema %}