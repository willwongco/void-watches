{% doc %}
  @prompt
    Create a Liquid code block that displays an image from a metafield in a blog post. The block should pull the image URL from a blog post metafield and display it with proper styling and responsive design.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-metafield-image-{{ ai_gen_id }} {
    width: 100%;
    margin: {{ block.settings.margin_top }}px 0{{ block.settings.margin_bottom }}px;
  }

  .ai-blog-metafield-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: {% if block.settings.show_shadow %}0 4px 12px rgba(0, 0, 0, 0.1){% else %}none{% endif %};
  }

  .ai-blog-metafield-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-blog-metafield-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    min-height: 300px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    font-size: 14px;
  }

  .ai-blog-metafield-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-blog-metafield-image-caption-{{ ai_gen_id }} {
    margin-top: 12px;
    text-align: {{ block.settings.caption_alignment }};
    font-size: {{ block.settings.caption_size }}px;
    color: {{ block.settings.caption_color }};font-style: {% if block.settings.caption_italic %}italic{% else %}normal{% endif %};
  }

  @media screen and (max-width: 749px) {
    .ai-blog-metafield-image-wrapper-{{ ai_gen_id }} {
      max-width: 100%;
      border-radius: {{ block.settings.border_radius | times: 0.7 }}px;
    }

    .ai-blog-metafield-image-{{ ai_gen_id }} {
      margin: {{ block.settings.margin_top | times: 0.7 }}px 0 {{ block.settings.margin_bottom | times: 0.7 }}px;
    }

    .ai-blog-metafield-image-caption-{{ ai_gen_id }} {
      font-size: {{ block.settings.caption_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-blog-metafield-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-metafield-image-wrapper-{{ ai_gen_id }}">
    {% if blog[block.settings.metafield_namespace][block.settings.metafield_key] %}
      {% assign metafield_image = blog[block.settings.metafield_namespace][block.settings.metafield_key] %}
      {% if metafield_image.type == 'file_reference' and metafield_image.value %}
        <img
          src="{{ metafield_image.value | image_url: width: 1200 }}"
          alt="{{ metafield_image.value.alt | default: blog.title | escape }}"
          loading="lazy"
          width="{{ metafield_image.value.width | default: 1200 }}"
          height="{{ metafield_image.value.height | default: 800 }}"
          srcset="
            {{ metafield_image.value | image_url: width: 400 }} 400w,
            {{ metafield_image.value | image_url: width: 600 }} 600w,
            {{ metafield_image.value | image_url: width: 800 }} 800w,
            {{ metafield_image.value | image_url: width: 1200 }} 1200w
          "
          sizes="(max-width: 749px) 100vw, {{ block.settings.max_width }}px">
      {% elsif metafield_image.type == 'single_line_text_field' and metafield_image.value != blank %}
        <img
          src="{{ metafield_image.value }}"
          alt="{{ blog.title | escape }}"
          loading="lazy"
          width="1200"
          height="800"
        >
      {% else %}
        <div class="ai-blog-metafield-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    {% else %}
      <div class="ai-blog-metafield-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_caption and block.settings.caption_text != blank %}
    <div class="ai-blog-metafield-image-caption-{{ ai_gen_id }}">
      {{ block.settings.caption_text }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Blog metafield image",
  "settings": [
    {
      "type": "header",
      "content": "Metafield settings"
    },
    {
      "type": "text",
      "id": "metafield_namespace",
      "label": "Metafield namespace",
      "default": "custom",
      "info": "The namespace of your blog metafield (e.g., 'custom')"
    },
    {
      "type": "text",
      "id": "metafield_key",
      "label": "Metafield key",
      "default": "featured_image",
      "info": "The key of your blog metafield (e.g., 'featured_image')"
    },
    {
      "type": "header",
      "content": "Image settings"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 300,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 800
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_shadow",
      "label": "Show shadow",
      "default": true
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top margin",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom margin",
      "default": 20
    },
    {
      "type": "header",
      "content": "Caption"
    },
    {
      "type": "checkbox",
      "id": "show_caption",
      "label": "Show caption",
      "default": false
    },
    {
      "type": "textarea",
      "id": "caption_text",
      "label": "Caption text",
      "default": "Featured image from blog metafield"
    },
    {
      "type": "select",
      "id": "caption_alignment",
      "label": "Caption alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "caption_size",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Caption size",
      "default": 14
    },
    {
      "type": "color",
      "id": "caption_color",
      "label": "Caption color",
      "default": "#666666"
    },
    {
      "type": "checkbox",
      "id": "caption_italic",
      "label": "Italic caption",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Blog metafield image"
    }
  ],
  "tag": null
}
{% endschema %}