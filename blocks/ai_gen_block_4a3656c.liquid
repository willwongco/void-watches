{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-blog-grid__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-blog-grid__title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
  }

  .ai-blog-grid__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
  }

  .ai-blog-grid__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: {{ block.settings.pagination_spacing }}px;
  }

  .ai-blog-grid__article-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-blog-grid__article-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow }}px {{ block.settings.hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-blog-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
  }

  .ai-blog-grid__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-blog-grid__article-{{ ai_gen_id }}:hover .ai-blog-grid__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-blog-grid__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-blog-grid__image-placeholder-{{ ai_gen_id }} svg {
    width: 40%;
    height: 40%;
    opacity: 0.3;
  }

  .ai-blog-grid__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;}

  .ai-blog-grid__date-{{ ai_gen_id }} {
    color: {{ block.settings.date_color }};
    font-size: {{ block.settings.date_size }}px;
    margin-bottom: {{ block.settings.date_spacing }}px;
    display: block;
  }

  .ai-blog-grid__article-title-{{ ai_gen_id }} {
    color: {{ block.settings.article_title_color }};
    font-size: {{ block.settings.article_title_size }}px;
    font-weight: {{ block.settings.article_title_weight }};
    margin: 0 0 {{ block.settings.article_title_spacing }}px;line-height: 1.3;
  }

  .ai-blog-grid__article-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-blog-grid__article-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-blog-grid__excerpt-{{ ai_gen_id }} {
    color: {{ block.settings.excerpt_color }};
    font-size: {{ block.settings.excerpt_size }}px;
    line-height: 1.5;
    margin-bottom: {{ block.settings.excerpt_spacing }}px;
  }

  .ai-blog-grid__read-more-{{ ai_gen_id }} {
    color: {{ block.settings.read_more_color }};
    font-size: {{ block.settings.read_more_size }}px;
    font-weight: {{ block.settings.read_more_weight }};
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: color 0.3s ease;
  }

  .ai-blog-grid__read-more-{{ ai_gen_id }}:hover {
    color: {{ block.settings.read_more_hover_color }};
  }

  .ai-blog-grid__read-more-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .ai-blog-grid__read-more-{{ ai_gen_id }}:hover svg {
    transform: translateX(4px);
  }

  .ai-blog-grid__pagination-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
  }

  .ai-blog-grid__pagination-link-{{ ai_gen_id }} {
    padding: 12px 20px;
    background-color: {{ block.settings.pagination_bg }};
    color: {{ block.settings.pagination_text }};
    text-decoration: none;
    border-radius: {{ block.settings.pagination_border_radius }}px;
    border: {{ block.settings.pagination_border_width }}px solid {{ block.settings.pagination_border }};
    transition: all 0.3s ease;
  }

  .ai-blog-grid__pagination-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.pagination_hover_bg }};
    color: {{ block.settings.pagination_hover_text }};
    border-color: {{ block.settings.pagination_hover_border }};
  }

  .ai-blog-grid__pagination-current-{{ ai_gen_id }} {
    padding: 12px 20px;
    background-color: {{ block.settings.pagination_active_bg }};
    color: {{ block.settings.pagination_active_text }};
    border-radius: {{ block.settings.pagination_border_radius }}px;
    border: {{ block.settings.pagination_border_width }}px solid {{ block.settings.pagination_active_border }};
  }

  @media screen and (max-width: 990px) {
    .ai-blog-grid__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-blog-grid__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.mobile_grid_gap }}px;
    }

    .ai-blog-grid__article-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.article_title_size | times: 0.9 }}px;
    }

    .ai-blog-grid__content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-blog-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_header %}
    <div class="ai-blog-grid__header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-blog-grid__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.description != blank %}
        <div class="ai-blog-grid__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>
  {% endif %}

  {% if block.settings.selected_blog != blank %}
    {% paginate block.settings.selected_blog.articles by block.settings.articles_per_page %}
      {% assign sorted_articles = block.settings.selected_blog.articles %}
      {% if block.settings.sort_order == 'oldest_first' %}
        {% assign sorted_articles = block.settings.selected_blog.articles | reverse %}
      {% endif %}<div class="ai-blog-grid__container-{{ ai_gen_id }}">
        {% for article in sorted_articles %}<article class="ai-blog-grid__article-{{ ai_gen_id }}">
            {% if block.settings.show_images %}
              <div class="ai-blog-grid__image-wrapper-{{ ai_gen_id }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 600 }}"
                    alt="{{ article.image.alt | escape }}"
                    class="ai-blog-grid__image-{{ ai_gen_id }}"
                    loading="lazy"width="{{ article.image.width }}"
                    height="{{ article.image.height }}"
                  >
                {% else %}
                  <div class="ai-blog-grid__image-placeholder-{{ ai_gen_id }}">
                    {{ 'blog-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
            {% endif %}

            <div class="ai-blog-grid__content-{{ ai_gen_id }}">
              {% if block.settings.show_date %}
                <time class="ai-blog-grid__date-{{ ai_gen_id }}" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                  {{ article.published_at | date: block.settings.date_format }}
                </time>
              {% endif %}

              <h3 class="ai-blog-grid__article-title-{{ ai_gen_id }}">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h3>

              {% if block.settings.show_excerpt and article.excerpt != blank %}
                <div class="ai-blog-grid__excerpt-{{ ai_gen_id }}">
                  {{ article.excerpt | truncate: block.settings.excerpt_length }}
                </div>
              {% endif %}

              {% if block.settings.show_read_more %}
                <a href="{{ article.url }}" class="ai-blog-grid__read-more-{{ ai_gen_id }}">
                  {{ block.settings.read_more_text }}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14"></path>
                    <path d="M12 5l7 7-7 7"></path>
                  </svg>
                </a>
              {% endif %}
            </div>
          </article>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="ai-blog-grid__pagination-{{ ai_gen_id }}">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="ai-blog-grid__pagination-link-{{ ai_gen_id }}">
              {{ block.settings.previous_text }}
            </a>
          {% endif %}

          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}" class="ai-blog-grid__pagination-link-{{ ai_gen_id }}">
                {{ part.title }}
              </a>
            {% else %}
              {% if part.title == paginate.current_page %}
                <span class="ai-blog-grid__pagination-current-{{ ai_gen_id }}">
                  {{ part.title }}
                </span>
              {% else %}
                <span class="ai-blog-grid__pagination-link-{{ ai_gen_id }}">
                  {{ part.title }}
                </span>
              {% endif %}
            {% endif %}
          {% endfor %}

          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="ai-blog-grid__pagination-link-{{ ai_gen_id }}">
              {{ block.settings.next_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    {% endpaginate %}
  {% else %}
    <div class="ai-blog-grid__container-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        <article class="ai-blog-grid__article-{{ ai_gen_id }}">
          <div class="ai-blog-grid__image-wrapper-{{ ai_gen_id }}">
            <div class="ai-blog-grid__image-placeholder-{{ ai_gen_id }}">
              {{ 'blog-apparel-1' | placeholder_svg_tag }}
            </div>
          </div>
          <div class="ai-blog-grid__content-{{ ai_gen_id }}">
            <time class="ai-blog-grid__date-{{ ai_gen_id }}">January {{ i }}, 2024</time>
            <h3 class="ai-blog-grid__article-title-{{ ai_gen_id }}">
              <a href="#">Sample Blog Post {{ i }}</a>
            </h3>
            <div class="ai-blog-grid__excerpt-{{ ai_gen_id }}">
              This is a sample excerpt for blog post {{ i }}. Select a blog to display real content.
            </div>
            <a href="#" class="ai-blog-grid__read-more-{{ ai_gen_id }}">
              {{ block.settings.read_more_text }}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="M12 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      {% endfor %}
    </div>
  {% endif %}
</div>

