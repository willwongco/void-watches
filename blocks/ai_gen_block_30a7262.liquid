{% doc %}
  @prompt
    Make a section with two images side by side with text underneath. The text should have a header and a text., Make images links and create a call to action text below the text., Make call to action text visible and a link.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-dual-image-text-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-dual-image-text__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-dual-image-text__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
  }

  .ai-dual-image-text__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-dual-image-text__image-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    margin-bottom: {{ block.settings.text_spacing }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .ai-dual-image-text__image-link-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
  }

  .ai-dual-image-text__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-dual-image-text__image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-dual-image-text__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-dual-image-text__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-dual-image-text__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-dual-image-text__content-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-dual-image-text__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: 1.3;
  }

  .ai-dual-image-text__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0 0 {{ block.settings.cta_spacing }}px;
  }

  .ai-dual-image-text__cta-{{ ai_gen_id }} {
    display: inline-block;
    color: {{ block.settings.cta_color }};
    font-size: {{ block.settings.cta_size }}px;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .ai-dual-image-text__cta-{{ ai_gen_id }}:hover {
    color: {{ block.settings.cta_hover_color }};
  }

  .ai-dual-image-text__cta-{{ ai_gen_id }}::after {
    content: " â†’";
    margin-left: 4px;
    transition: transform 0.3s ease;
  }

  .ai-dual-image-text__cta-{{ ai_gen_id }}:hover::after {
    transform: translateX(4px);
  }

  @media screen and (max-width: 749px) {
    .ai-dual-image-text__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-dual-image-text__image-{{ ai_gen_id }},
    .ai-dual-image-text__image-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-dual-image-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-dual-image-text__container-{{ ai_gen_id }}">
    <div class="ai-dual-image-text__grid-{{ ai_gen_id }}">
      <div class="ai-dual-image-text__item-{{ ai_gen_id }}">
        {% if block.settings.link_1 != blank %}
          <a href="{{ block.settings.link_1 }}" class="ai-dual-image-text__image-link-{{ ai_gen_id }}">
        {% else %}
          <div class="ai-dual-image-text__image-link-{{ ai_gen_id }}">
        {% endif %}
          <div class="ai-dual-image-text__image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_1 %}
              <img
                src="{{ block.settings.image_1 | image_url: width: 800 }}"
                alt="{{ block.settings.image_1.alt | escape }}"
                class="ai-dual-image-text__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_1.width }}"
                height="{{ block.settings.image_1.height }}"
              >
            {% else %}
              <div class="ai-dual-image-text__image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                <div class="ai-dual-image-text__empty-state-{{ ai_gen_id }}">
                  Add first image
                </div>
              </div>
            {% endif %}
          </div>
        {% if block.settings.link_1 != blank %}
          </a>
        {% else %}
          </div>
        {% endif %}
        <div class="ai-dual-image-text__content-{{ ai_gen_id }}">
          {% if block.settings.heading_1 != blank %}
            <h3 class="ai-dual-image-text__heading-{{ ai_gen_id }}">{{ block.settings.heading_1 }}</h3>
          {% endif %}
          {% if block.settings.text_1 != blank %}
            <div class="ai-dual-image-text__text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</div>
          {% endif %}
          {% if block.settings.cta_text_1 != blank %}
            {% if block.settings.cta_link_1 != blank %}
              <a href="{{ block.settings.cta_link_1 }}" class="ai-dual-image-text__cta-{{ ai_gen_id }}">
                {{ block.settings.cta_text_1 }}
              </a>
            {% else %}
              <span class="ai-dual-image-text__cta-{{ ai_gen_id }}">
                {{ block.settings.cta_text_1 }}
              </span>
            {% endif %}
          {% endif %}
        </div>
      </div>

      <div class="ai-dual-image-text__item-{{ ai_gen_id }}">
        {% if block.settings.link_2 != blank %}
          <a href="{{ block.settings.link_2 }}" class="ai-dual-image-text__image-link-{{ ai_gen_id }}">
        {% else %}
          <div class="ai-dual-image-text__image-link-{{ ai_gen_id }}">
        {% endif %}
          <div class="ai-dual-image-text__image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_2 %}
              <img
                src="{{ block.settings.image_2 | image_url: width: 800 }}"
                alt="{{ block.settings.image_2.alt | escape }}"
                class="ai-dual-image-text__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_2.width }}"
                height="{{ block.settings.image_2.height }}"
              >
            {% else %}
              <div class="ai-dual-image-text__image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                <div class="ai-dual-image-text__empty-state-{{ ai_gen_id }}">
                  Add second image
                </div>
              </div>
            {% endif %}
          </div>
        {% if block.settings.link_2 != blank %}
          </a>
        {% else %}
          </div>
        {% endif %}
        
        <div class="ai-dual-image-text__content-{{ ai_gen_id }}">
          {% if block.settings.heading_2 != blank %}
            <h3 class="ai-dual-image-text__heading-{{ ai_gen_id }}">{{ block.settings.heading_2 }}</h3>
          {% endif %}
          {% if block.settings.text_2 != blank %}
            <div class="ai-dual-image-text__text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</div>
          {% endif %}
          {% if block.settings.cta_text_2 != blank %}
            {% if block.settings.cta_link_2 != blank %}
              <a href="{{ block.settings.cta_link_2 }}" class="ai-dual-image-text__cta-{{ ai_gen_id }}">
                {{ block.settings.cta_text_2 }}
              </a>
            {% else %}
              <span class="ai-dual-image-text__cta-{{ ai_gen_id }}">
                {{ block.settings.cta_text_2 }}
              </span>
            {% endif %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

