{% doc %}
  @prompt
    Add a section with a large header on the left side and a text segment on the right. The text should allow for dynamic content.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-text-section-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    max-width: 100%;
  }

  .ai-header-text-section__header-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.header_width }}%;
    min-width: 0;
  }

  .ai-header-text-section__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.header_size }}px;
    color: {{ block.settings.header_color }};
    line-height: 1.2;
    word-wrap: break-word;
  }

  .ai-header-text-section__content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-header-text-section__text-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-header-text-section-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-header-text-section__header-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
    }

    .ai-header-text-section__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.header_size | times: 0.8 }}px;
    }

    .ai-header-text-section__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-header-text-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-header-text-section__header-{{ ai_gen_id }}">
    {% if block.settings.header_text != blank %}
      <h2 class="ai-header-text-section__title-{{ ai_gen_id }}">
        {{ block.settings.header_text }}
      </h2>
    {% else %}
      <h2 class="ai-header-text-section__title-{{ ai_gen_id }}" style="color: #999; font-style: italic;">
        Add your header text
      </h2>
    {% endif %}
  </div>

  <div class="ai-header-text-section__content-{{ ai_gen_id }}">
    {% if block.settings.content_text != blank %}
      <div class="ai-header-text-section__text-{{ ai_gen_id }}">
        {{ block.settings.content_text }}
      </div>
    {% else %}
      <div class="ai-header-text-section__text-{{ ai_gen_id }}" style="color: #999; font-style: italic;">
        Add your content text here. This area supports rich text formatting.
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Header and text section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header text",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "content_text",
      "label": "Content text",
      "default": "<p>Share your brand story, mission, or any important information with your customers. This flexible text area allows you to create engaging content that connects with your audience.</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "header_width",
      "min": 20,
      "max": 60,
      "step": 5,
      "unit": "%",
      "label": "Header width",
      "default": 40
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "flex-start"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 20,
      "max": 80,
      "step": 10,
      "unit": "px",
      "label": "Gap between sections",
      "default": 40
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile layout",
      "options": [
        {
          "value": "column",
          "label": "Stacked"
        },
        {
          "value": "column-reverse",
          "label": "Text first"
        }
      ],
      "default": "column"
    },
    {
      "type": "range",
      "id": "mobile_gap",
      "min": 10,
      "max": 40,
      "step": 5,
      "unit": "px",
      "label": "Mobile gap",
      "default": 20
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "header_color",
      "label": "Header color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "header_size",
      "min": 24,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Header size",
      "default": 48
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Header and text section"
    }
  ],
  "tag": null
}
{% endschema %}