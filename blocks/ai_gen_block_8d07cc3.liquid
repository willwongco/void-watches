    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_width }}px;
  }

  .ai-strap-offer-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-strap-offer-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-strap-offer-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-strap-offer-details-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-strap-offer-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 8px 0;
  }

  .ai-strap-offer-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 12px 0;
    line-height: 1.4;
  }

  .ai-strap-offer-pricing-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 16px;
  }

  .ai-strap-offer-original-price-{{ ai_gen_id }} {
    color: {{ block.settings.original_price_color }};
    font-size: {{ block.settings.price_size }}px;
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-strap-offer-sale-price-{{ ai_gen_id }} {
    color: {{ block.settings.sale_price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
  }

  .ai-strap-offer-discount-{{ ai_gen_id }} {
    background-color: {{ block.settings.discount_bg_color }};
    color: {{ block.settings.discount_text_color }};
    padding: 4px 8px;
    border-radius: 4px;
    font-size: {{ block.settings.discount_size }}px;
    font-weight: 600;
  }

  .ai-strap-offer-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    padding: 12px 24px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-strap-offer-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-strap-popup-overlay-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .ai-strap-popup-overlay-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-strap-popup-{{ ai_gen_id }} {
    background-color: {{ block.settings.popup_bg_color }};
    border-radius: {{ block.settings.popup_border_radius }}px;
    padding: 30px;
    max-width: 90vw;
    max-height: 90vh;
    width: {{ block.settings.popup_width }}px;
    overflow-y: auto;
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }

  .ai-strap-popup-overlay-{{ ai_gen_id }}.active .ai-strap-popup-{{ ai_gen_id }} {
    transform: scale(1);
  }

  .ai-strap-popup-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .ai-strap-popup-title-{{ ai_gen_id }} {
