    padding: {{ block.settings.padding }}px;
    margin: 20px 0;}

  .ai-strap-offer-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .ai-strap-offer-image-{{ ai_gen_id }} {
