{% doc %}
  @prompt
    Add two images 700x100 side by side. These images should be unique to the SKU., Adjust height of images to full height., Split the right image into two equal sized images. It should be possible to add a link to the bottom right image.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-sku-images-container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    width: 100%;
    max-width: 100%;
    height: 100vh;
  }

  .ai-sku-image-left-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;background-color: {{ block.settings.placeholder_background }};
  }

  .ai-sku-image-right-column-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.gap }}px;
    height: 100%;
  }

  .ai-sku-image-wrapper-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.placeholder_background }};
  }

  .ai-sku-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;display: block;
  }

  .ai-sku-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_background }};
  }

  .ai-sku-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
    color: {{ block.settings.placeholder_color }};
  }

  .ai-sku-image-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-sku-image-link-{{ ai_gen_id }}:hover .ai-sku-image-{{ ai_gen_id }} {
    transform: scale(1.05);
    transition: transform 0.3s ease;
  }

  @media screen and (max-width: 749px) {
    .ai-sku-images-container-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stack' %}
        flex-direction: column;height: 100vh;
      {% else %}
        flex-direction: row;
        height: 50vh;
      {% endif %}
    }

    .ai-sku-image-right-column-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stack' %}
        flex-direction: column;
      {% else %}
        flex-direction: row;
      {% endif %}
    }
  }
{% endstyle %}

<div
  class="ai-sku-images-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-sku-image-left-{{ ai_gen_id }}">
    {% if block.settings.image_1 %}
      <img
        src="{{ block.settings.image_1 | image_url: width: 2000 }}"
        alt="{{ block.settings.image_1.alt | escape }}"
        class="ai-sku-image-{{ ai_gen_id }}"
        width="{{ block.settings.image_1.width }}"
        height="{{ block.settings.image_1.height }}"
        loading="lazy"
      >
    {% else %}
      <div class="ai-sku-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-sku-image-right-column-{{ ai_gen_id }}">
    <div class="ai-sku-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image_2 %}
        <img
          src="{{ block.settings.image_2 | image_url: width: 2000 }}"
          alt="{{ block.settings.image_2.alt | escape }}"
          class="ai-sku-image-{{ ai_gen_id }}"
          width="{{ block.settings.image_2.width }}"
          height="{{ block.settings.image_2.height }}"
          loading="lazy"
        >
      {% else %}
        <div class="ai-sku-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-sku-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image_3_link %}
        <a href="{{ block.settings.image_3_link }}" class="ai-sku-image-link-{{ ai_gen_id }}">
          {% if block.settings.image_3 %}
            <img
              src="{{ block.settings.image_3 | image_url: width: 2000 }}"
              alt="{{ block.settings.image_3.alt | escape }}"
              class="ai-sku-image-{{ ai_gen_id }}"
              width="{{ block.settings.image_3.width }}"
              height="{{ block.settings.image_3.height }}"
              loading="lazy"
            >
          {% else %}
            <div class="ai-sku-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </a>
      {% else %}
        {% if block.settings.image_3 %}
          <img
            src="{{ block.settings.image_3 | image_url: width: 2000 }}"
            alt="{{ block.settings.image_3.alt | escape }}"
            class="ai-sku-image-{{ ai_gen_id }}"
            width="{{ block.settings.image_3.width }}"
            height="{{ block.settings.image_3.height }}"
            loading="lazy"
          >
        {% else %}
          <div class="ai-sku-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "SKU images",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Left image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Top right image"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Bottom right image"
    },
    {
      "type": "url",
      "id": "image_3_link",
      "label": "Bottom right image link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Gap between images",
      "default": 16
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile layout",
      "options": [
        {
          "value": "side",
          "label": "Side by side"
        },
        {
          "value": "stack",
          "label": "Stacked"
        }
      ],
      "default": "side"
    },
    {
      "type": "header",
      "content": "Placeholder style"
    },
    {
      "type": "color",
      "id": "placeholder_background",
      "label": "Background",
      "default": "#f4f4f4"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "Icon color",
      "default": "#cccccc"
    }
  ],
  "presets": [
    {
      "name": "SKU images"
    }
  ],
  "tag": null
}
{% endschema %}