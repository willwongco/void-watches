{% doc %}
  @prompt
    Add text block. The text should be centered on the screen., Make top and bottom padding adjustable down to 0.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-block-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-text-content-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    width: 100%;
  }

  .ai-text-content-{{ ai_gen_id }} h1,
  .ai-text-content-{{ ai_gen_id }} h2,
  .ai-text-content-{{ ai_gen_id }} h3,
  .ai-text-content-{{ ai_gen_id }} h4,
  .ai-text-content-{{ ai_gen_id }} h5,
  .ai-text-content-{{ ai_gen_id }} h6 {
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
  }

  .ai-text-content-{{ ai_gen_id }} p {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.line_height }};
    margin: 0 0 16px;
  }

  .ai-text-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-text-content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-text-content-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  @media screen and (max-width:749px) {
    .ai-text-block-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_top }}px {{ block.settings.mobile_padding_horizontal }}px {{ block.settings.mobile_padding_bottom }}px;
      min-height: {{ block.settings.mobile_min_height }}px;
    }

    .ai-text-content-{{ ai_gen_id }} p {
      font-size: {{ block.settings.mobile_text_size }}px;
    }
  }
{% endstyle %}

<div class="ai-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-content-{{ ai_gen_id }}">
    {% if block.settings.text != blank %}
      {{ block.settings.text }}
    {% else %}
      <p>Add your text content here. This text will be centered on the screen.</p>
    {% endif %}
  </div>
</div>

